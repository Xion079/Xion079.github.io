using System;

class Weather
{
    static void Main()
    {
        Console.WriteLine("오늘 날씨는 어떤가요?");
        Console.Write("1.맑음");
        Console.Write("\t2.흐림");
        Console.Write("\t3.비");
        Console.Write("\t4.눈\n");

        string? weather = Console.ReadLine();

        switch(weather)
        {
            case "맑음":
                Console.WriteLine("외출하기 좋은 날씨입니다.");
                break;
            case "흐림":
                Console.WriteLine("비나 눈이 올수있습니다.");
                break;
            case "비":
                Console.WriteLine("비가 오고 있습니다 우산 챙겨가세요.");
                break;
            case "눈":
                Console.WriteLine("따듯하게 옷을 입고 미끄러지지않게 조심하세요.");
                break;
            default:
                Console.WriteLine("입력되지않은 날씨입니다");
                break;

        }


    }
}
