using System;

class NamedParameter
{
    static void Show(string name, int x = 1) //default parameter
    {
        for (int i = 0; i < x; i++)
        {
            Console.WriteLine($"안녕하하세요 {name}님");
        }
    }



    static void Main()
    {
        Show("홍길동", 3); //3을 안쓰면 x=1이 그대로 나오고
                           //3을썻으니 int x=3으로 인식됨
    }
}
