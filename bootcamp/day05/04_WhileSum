using System;
using System.ComponentModel.Design;

class WhileSum
{
    static void Main()
    {
        Console.WriteLine("숫자를 입력하세요:");
        int num = Convert.ToInt32(Console.ReadLine());
        int sum = 0;


        int i = 0;
        while (i <= num)
        {
            if (i % 2 == 0)
            {
                sum += i;
            }
            i++;
        }

        Console.WriteLine($"1부터 {num}까지 짝수의 합: {sum}");

    } 
}
