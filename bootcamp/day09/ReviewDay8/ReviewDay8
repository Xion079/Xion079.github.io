using System;

public class Student
{
    private string? name;
    private int id;

    public Student(string name, int id) 
    {
        this.name = name;
        this.id = id;
    }

    public void Show()
    {
        Console.WriteLine($"이름:{this.name}, 아이디:{this.id}");
    }

}

class ReviewDay8
{
    static void Main()
    {
        Student student = new Student("홍길동", 24);
        student.Show();
        
    }

}
